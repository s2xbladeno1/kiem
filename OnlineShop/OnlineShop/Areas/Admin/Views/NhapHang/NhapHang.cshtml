@model Model.EF.NhapHang

@{
    ViewBag.Title = "NhapHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var user = (UserLogin)Session[OnlineShop.Common.CommonConstant.USER_SESSION];
}
@using (Html.BeginForm("NhapHang","NhapHang",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nhập Hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.TongTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.NgayNhap, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.NguoiNhap, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Nhân viên: @user.HoTen
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo 1 bill nhập hàng" class="btn btn-success" />
            </div>
        </div>
    </div>
}