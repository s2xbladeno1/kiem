@model OnlineShop.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập</title>
    <!-- Custom fonts for this template-->
    <link href="/Asset/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="/Asset/admin/css/sb-admin.css" rel="stylesheet">
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <center><div class="card-header">ĐĂNG NHẬP</div></center>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "",  new {@class="text-danger" });
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.TaiKhoan, new {@class = "form-control", @autofocus="autofocus"})
                            <label for="inputEmail">Tài khoản</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @autofocus = "autofocus" })
                            <label for="inputPassword">Mật khẩu</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.RememberMe)
                                Lưu mật khẩu
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" href="index.html">Đăng nhập</button>
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="register.html">Đăng ký</a>
                    <a class="d-block small" href="forgot-password.html">Quên mật khẩu?</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/Asset/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Asset/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/Asset/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>
</html>
